@model IEnumerable<ExamSessionWeb.Models.StudyGroup>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Specialization)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfStudents)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ElderNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TutorNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Specialization)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfStudents)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ElderNavigation.StudentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TutorNavigation.TeacherId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NumberGroup">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NumberGroup">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NumberGroup">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
